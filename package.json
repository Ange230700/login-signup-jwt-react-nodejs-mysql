{
  "name": "login-signup-jwt-react-nodejs-mongodb",
  "version": "0.0.1",
  "private": true,
  "description": "",
  "homepage": "https://github.com/WildCodeSchool/login-signup-jwt-react-nodejs-mongodb#readme",
  "bugs": {
    "url": "https://github.com/WildCodeSchool/login-signup-jwt-react-nodejs-mongodb/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WildCodeSchool/login-signup-jwt-react-nodejs-mongodb.git"
  },
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "postinstall": "cross-env-shell \"husky install && npm install --workspace=client && npm install --workspace=server\"",
    "db:migrate": "npm run db:migrate --workspace=server",
    "db:seed": "npm run db:seed --workspace=server",
    "dev": "concurrently -c green,yellow -t \"HH:mm:ss\" -p \"{name} {time}\" \"npm:dev:*\"",
    "dev:client": "npm run dev --workspace=client",
    "dev:server": "npm run dev --workspace=server",
    "lint": "lint-staged",
    "test": "npm run test --workspaces --if-present",
    "clean": "cross-env-shell \"rm -rf ./client/node_modules ./client/package-lock.json ./server/node_modules ./server/package-lock.json ./node_modules ./package-lock.json\"",
    "prettier": "npm run prettier --workspaces",
    "lints": "npm run lint --workspaces",
    "start": "npm install && npm audit fix && npm run prettier && npm run lint && cd ./server && npm run db:migrate && npm run db:seed && cd .. && npm run dev"
  },
  "keywords": [],
  "author": "Ange230700",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^19.2.2",
    "@commitlint/config-conventional": "^19.2.2",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "validate-branch-name": "^1.3.0"
  }
}
